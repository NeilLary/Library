<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.library.mFragments.AuthorFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/authorsubcontent"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#ffff"
            android:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_marginTop="11dp">

                    <TextView
                        android:id="@+id/authortextViewleft"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="35sp"
                        android:text="@string/authors"
                        android:textSize="13sp"
                        android:gravity="start"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="67dp"
                        >

                        <TextView
                            android:id="@+id/authornumber"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40sp"
                            android:gravity="end"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/authortextViewright"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="45sp"
                            android:layout_marginStart="5dp"
                            android:gravity="end"
                            android:text="@string/authors_small"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

        </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>

        <include
            layout="@layout/recycler_author"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
/>

    </LinearLayout>



</FrameLayout>
